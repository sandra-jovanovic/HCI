<UserControl x:Class="HCI_projekat.Wizard.RequestsStepView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCI_projekat.Wizard"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="50">
        <TextBlock FontSize="25" >Uputstvo za lekare - zahtevi</TextBlock>
        <Control Margin="0 5" />
        <TextBlock FontSize="18" TextWrapping="Wrap">U okviru ove funkcionalnosti, možete da uputite tri vrste zahteva: zahteve za premenštanje opreme, zahteve za slobodne dane i zahteve za promenu radnog vremena. Ove funkcionalnosti možete da pronađete u okviru kartice prikazane na slici.</TextBlock>
        <Control Margin="0 5" />
        <Image>
            <Image.Source>
                <BitmapImage UriSource="/Images/doktor-zahtevi.png" />
            </Image.Source>
        </Image>
    </StackPanel>
</UserControl>
